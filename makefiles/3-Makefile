CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
emacs_temp_files = *- \#*\#
vim_temp_files = *.swp

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) $(NAME) $(emacs_temp_files) $(vim_temp_files)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all